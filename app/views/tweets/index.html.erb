<!--<p id="notice"><%= notice %></p>-->
<div class="container">
  

  <h1>Tweets</h1>
  
  <!-- Format the below with bootstrap by adding <table class="table"         s> #MDM-->
  <table class="table">
    <!--Use Bootrap thread-inverse class-->
    <thead class="thread-inverse">
      <tr>
        <th>User</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
           <!--Add in the users email address #MDM-->
          <!--<td><%= tweet.user %></td>-->
          <td><%= tweet.user.email %></td>
          <!-- if you want to avoid the exception screen, use .try : #MDM-->
          <!--<td><%= tweet.user.try(:email) %></td>-->
          
          <td><%= tweet.content %></td>
          <td><%= link_to 'Show', tweet %></td>
          
          <!--If the currently logged in user is the same as the user who created teh tweet, show the EDIT * DESTROY button. #MDM-->
          <% if tweet.user == current_user %>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <!--Makes more sense to show the New Tweet button only if user is logged-in #MDM -->
  <% if user_signed_in? %>
    <%= link_to 'New Tweet', new_tweet_path %>
  <% end %>

</div>
