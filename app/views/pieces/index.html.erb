<p id="notice"><%= notice %></p>

<h1>Pieces</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist name</th>
      <th>Length</th>
      <th>Width</th>
      <th>Height</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.title %></td>
        <td><%= piece.artist_name %></td>
        <td><%= piece.length %></td>
        <td><%= piece.width %></td>
        <td><%= piece.height %></td>
        <td><%= piece.year %></td>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
        <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Piece', new_piece_path %>
