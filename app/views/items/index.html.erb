<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h1>Items</h1>
  
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Url</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <!-- In order to actually show the email use item.user.email -->
          <!--<td><%= item.user %></td>-->
          <!--<td><%= item.user.email %></td>-->
          <!--Show the username instead of the email #MDM-->
          <td><%= item.user.username %></td>
          
          
          <td><%= item.title %></td>
          <td><%= item.url %></td>
          <td><%= item.text %></td>
          <td><%= link_to 'Show', item %></td>
          
          <!--Show the Edit and Destroy links only if they are the owner of the "Ã¯tem" -->
          <% if item.user = current_user %>
            <td><%= link_to 'Edit', edit_item_path(item) %></td>
            <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
  
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Item', new_item_path %>
  
</div>
